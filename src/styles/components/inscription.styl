html 
    body
        #inscription-container
            padding 2vh 4vw
            .title
                display block
                width 100%
                text-align left
                text-transform uppercase
                h4
                    font-family UniHeavyItalic
                    font-size 20px
                    color #dfdfdf
                    margin 25px 0 0 0
                .line
                    margin 1vh 0
                    width 10vw
                    height 2px
                    background #E51111  
            form
                .team-name 
                    display inline-block
                    margin 3vh 3vw 4vh 0
                    border-radius 2px
                    border 0
                    padding 4px
                .email
                    display inline-block
                    border-radius 2px
                    border 0
                    padding 4px
                .title
                    display block
                    width 100%
                    text-align left
                    text-transform uppercase
                    span
                        font-size 14px
                        font-family GothamMedium
                        font-style italic
                        opacity 0.6
                    .line
                        margin 1vh 0
                        width 14vw
                        height 2px
                        background #E51111  
                .selected-hero
                    font-family UniHeavyItalic
                    font-size 16px
                input[type=checkbox]
                	display none
                input[type=checkbox] + label
                	background-size contain
                	background-position center
                	background-repeat no-repeat
                	height 150px
                	width 150px
                	display inline-block
                	padding 0 0 0 0px
                input[type=checkbox]:checked + label
                	background-size contain
                	border 1px solid #ffffff
                	background-repeat no-repeat
                	height 150px
                	width 150px
                	display inline-block
                	paddingS 0 0 0 0px
                label
                    margin 0 auto
                .submit-team
                    width 200px
                    height 50px
                    margin-bottom 3vh
                    margin-left 8vw
                    margin-top 3vh
                    background #E51111
                    border none
                    font-family GothamMedium
                    font-size 22px
                    color #dfdfdf
        #team-page
            padding 3vh 4vw
            font-family GothamMedium
            div
                margin-bottom 3vh
            a
                text-decoration none
                display inline-block
                vertical-align top
                button
                    width 200px
                    height 55px
                    margin-bottom 3vh
                    margin-left 8vw
                    margin-top 3vh
                    background #E51111
                    border none
                    font-family GothamMedium
                    font-size 18px
                    color #dfdfdf
                    border-radius 2px