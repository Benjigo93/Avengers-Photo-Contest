html 
    body
        #inscription-container
            input[type=checkbox] {
            	display: none;
            }

            input[type=checkbox] + label {
            	background-size: contain;
            	background-position: center;
            	background-repeat: no-repeat;
            	height: 100px;
            	width: 100px;
            	display: inline-block;
            	padding: 0 0 0 0px;
            }

            input[type=checkbox]:checked + label {
            	background-size: contain;
            	border: 1px solid red;
            	background-repeat: no-repeat;
            	height: 100px;
            	width: 100px;
            	display: inline-block;
            	padding: 0 0 0 0px;
            }