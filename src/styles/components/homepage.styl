html
    body
        font-family: 'gotham'
        background: #222222
        width: 100vw
        color: rgb(255, 255, 255)
        #homepage
            .header
                background-image: url('../assets/images/avengers-infinity-war.jpg');
                background-size: cover;
                background-repeat: no-repeat;
            a
                text-decoration: none       

            .videoPlayerButton
                margin: 13vw auto
                width: 25%
                text-align: center    

                .fa-play-circle 
                    font-size: 70px
                    transition: opacity 0.5s

                .fa-play-circle:hover
                    opacity: 0.1
                    will-change: transform

            .container.index-1
                margin: 0 10vw

            .container.index-2
                background: #2e2e2e
                padding: 0 10vw

            .title
                font-family: "UniHeavyItalic"
                font-size: 2em
                position: relative
                padding: 50px 0

                .filet
                    background: #E23636
                    width: 150px
                    height: 3px
                    position: absolute
                    top: 80%
                    left: 0%

            .contestText
                width: 45vw
                display: inline-block
                font-weight: 100    
                line-height: 150%
                margin-right: 9vw
                p
                    margin: 2vw 0

            .avengersImg
                width: 25vw
                height: 25vh
                margin: 3vw auto
                background-image: url('../assets/images/avengers.png')
                background-size: cover
                display: inline-block
    
            .participationButton
            	cursor:pointer
            	color:#ffffff
            	font-size 1.5vw
            	font-weight bold 
            	.participationButton1
                    background-color #E23636
                    display:inline-block
                    padding 1vw 2vw
                    margin: 5% 0
                    transition: all 0.5s ease
                    float right

                a:hover
                    background-color #ad2727


@import 'partials/header.styl'
@import 'partials/footer.styl'