html
    body
        #ranking
            background-color #222222
            padding 2vh 2vw
            color #ffffff
            font-family GothamMedium
            .container
                width 80%
                margin 0 auto
                // Title
                .title
                    display block
                    width 100%
                    text-align left
                    text-transform uppercase
                    h4
                        font-family UniHeavyItalic
                        font-size 20px
                        color #dfdfdf
                        margin 25px 0 0 0
                    .line
                        margin 1vh 0
                        width 8vw
                        height 2px
                        background #E51111   
                // Friend rank
                h4
                    font-family UniHeavyItalic
                    font-size 18px
                    color #dfdfdf
                    margin 6vh 0 0 4vw
                span
                    display inline-block
                    font-size 16px
                    margin-top 3vh
                .rank-number
                    font-family GothamBold
                    font-size 20px
                    margin-right 3vw
                    width 20px
                    margin-left 4vw
                .team-name
                    margin-right 5vw
                    margin-bottom 5vh
                    width 25vw
                .votes                   
                    width 8vw
                .add-vote                  
                    width 30px
                .report
                    opacity 0.6
                    margin-right 3vw
                a
                    text-decoration none 
                    color #ffffff
                    font-size 16px
                input
                    opacity 0
                    cursor context-menu
                button
                    display inline-block
                    border-radius 2px                    
                    border 0
                    padding 3px 5px
                    font-family GothamMedium
                .pic-align-friend
                    margin -3vh 0 4vh 4vw
                    .pic-container
                        transform skew(-20deg, 0deg)
                        border 1px solid white
                        display inline-block
                        overflow hidden
                        width 7vw
                        height 13vh
                        margin-right 1vw
                        .heroePic
                            width 10vw
                            height 13vh
                            // display inline-block
                            background-size cover
                            transform skew(20deg, 0deg)
                            margin-left -2vw
