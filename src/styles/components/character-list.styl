html
    body
        #char-list
            position relative
            display flex
            flex-wrap wrap
            align-content: center
            a
                margin 2px
                div
                    margin 2px
                    width 19vw
                    height 30vh
                    background-size cover
                    color: white
                &:nth-child(18)
                    div
                        position absolute
                        margin 0px
                        left -3vw
                        width 25vw
                        height 30vh
                        background-size cover
                        color white
                        transform skew(20deg, 0deg)
                        .text-container
                            position absolute
                            padding-top 25px
                            left 0vw
                            text-align center
                            transform skew(0deg, 0deg)
                            margin-left 0
                        h2
                            font-family GothamBold
                            font-size 22px
                            padding-bottom 15px
                            color #E51111
                            text-transform uppercase
                            opacity 0
                            transition opacity 0.2s ease-out
                            margin 3px
                        span
                            font-family GothamMedium
                            opacity 0
                            transition opacity 0.2s ease-out
                            font-size 14px
                        .more
                            font-family GothamLight
                            position relative
                            top 6vw
                            font-weight bold
                            font-size 12px
                    div:hover
                        background-color rgba(0, 0, 0, 0.5)
                        transition background-color 0.2s ease-out
                    div:hover span
                        opacity 1
                        transition opacity 0.5s ease-out
                    div:hover h2
                        opacity 1
                        transition opacity 0.5s ease-out
                    &:nth-child(18)
                        div
                            background-position 15% 86%

@import 'partials/header.styl'
@import 'partials/footer.styl'